extends layout.pug

block content
	h1.text-center.stitched Order Pug Pizza
	form(method='POST')
		.form-group
			label.contactForm(for='name') Name
			input.form-control#name(placeholder="Pug Preston" type='text' name='name' required)
		.form-group
			label.contactForm(for='email') Email Address
			input.form-control#email(placeholder="pugmaster@pug.pug" type='email' name='email' required)
		.form-group
			label.contactForm(for='phone') Phone Number
			input.form-control#phone(placeholder="1-800-PRO-PUGS" type='tel' name='phone' required)
		.form-group
			label.contactForm(for='size') Size
			select.form-control#size(name='size' required)
				option(disabled selected) Select a size
				each size in sizes
					option(value=size.inches) #{size.name} : #{size.inches}"
		.form-group
			label.contactForm(for='toppings') Toppings
				each topping in toppings
					.checkbox
						label(for='toppings')
							input(type='checkbox' name='toppings' value=topping.name)
							| #{topping.name}
		button.btn.btn-success.btn-lg(type="submit") Submit